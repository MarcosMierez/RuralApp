@using ControleRural.Areas.Cadastramento.Models
@model ControleRural.Models.RegistroAnimal
<h2>Registro de compra e vendas de animais</h2>
<div class="form-group">
    <a ng-click="tab = 1" class="btn btn-success" ng-hide="tab===2">compra</a>
    <a ng-click="tab = 2" class="btn btn-warning" ng-hide="tab===1">venda</a>
</div>
<div ng-show="tab===1">
    <p>Nova Compra</p>
    <div class="form-horizontal">
        <form action="" method="POST">
            <input type="hidden" value="Compra" name="Natureza" />
            <div class="form-group">
                <label class="control-label col-md-2">Numero Brinco</label>
                <div class="col-md-10">
                    <input type="text" name="IdAnimal" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Categoria</label>
                <div class="col-md-10">
                    <select class="form-control" name="Categoria">
                        <option value="bovino">Bovino</option>
                        <option value="bubalino">Bubalino</option>
                        <option value="suino">Suíno</option>
                        <option value="outros">Outros</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Valor</label>
                <div class="col-md-10">
                    <input type="number" name="Valor" class="form-control" />
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Data da Compra</label>
                <div class="col-md-10">
                    <input type="date" name="Data" class="form-control" />
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar Compra" class="btn btn-success" />
                    <a href="" ng-click="tab = false" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        </form>
    </div>

</div>
<div ng-show="tab===2">
    <div class="form-horizontal">
        <form action="" method="POST">
            <p>Nova Venda</p>
            <input type="hidden" value="Venda" name="Natureza" />
            <div class="form-group">
                <label class="control-label col-md-2">Animal</label>
                <div class="col-md-10">
                    <select name="IdAnimal" class="form-control">
                        @foreach (var item in (List<AnimalVM>) ViewBag.criacoes)
                        {
                            <option value="@item.NumeroBrinco">@item.NomeAnimal</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Valor</label>
                <div class="col-md-10">
                    <input type="number" name="Valor" class="form-control"/>
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Data da Compra</label>
                <div class="col-md-10">
                    <input type="date" name="Data" class="form-control" />
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar Venda" class="btn btn-warning" />
                    <a href="" ng-click="tab = false" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
