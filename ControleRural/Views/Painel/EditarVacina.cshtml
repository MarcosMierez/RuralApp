@model ControleRural.Areas.Cadastramento.Models.VacinaVM

@{
    ViewBag.Title = "EditarVacina";
}

<h2>EditarVacina</h2>

@using (Html.BeginForm())
{
    
    <div class="form-horizontal">
        <h4>VacinaVM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model=>model.IdUsuario)
        <div class="form-group">
            @Html.LabelFor(model => model.NumeroLote, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroLote, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroLote, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataCompra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" >
                <input type="text" value="@Model.DataCompra.ToString("dd/MM/yyyy")" class="form-control" name="DataCompra" />
                @Html.ValidationMessageFor(model => model.DataCompra, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoVacina, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="TipoVacina" ng-click="s = true">
                    <option value="@Model.TipoVacina" selected="" ng-show="tab === false">@Model.TipoVacina</option>
                    <option value="Tuberculose">Tuberculose</option>
                    <option value="Brucelose">Brucelose</option>
                    <option value="Febre-Aftosa">Febre Aftosa</option>
                    <option value="Raiva-Bovina">Raiva Bovina</option>
                    <option value="Clostridiose">Clostridiose</option>
                    <option value="Salmonelose">Salmonelose</option>
                    <option value="Pasteurelose">Pasteurelose</option>
                </select>
                @Html.ValidationMessageFor(model => model.TipoVacina, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vencimento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" value="@Model.Vencimento.ToString("dd/MM/yyyy")" class="form-control" name="Vencimento" />
                @Html.ValidationMessageFor(model => model.Vencimento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Observacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea  cols="5" rows="5" placeholder="Sem Observações"  name="Observacao" class="form-control">@Model.Observacao</textarea>
                @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
